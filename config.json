{
	"source": ["properties/**/*.json"],
	"platforms": {
		"less": {
			"prefix": "ds",
			"buildPath": "dist/less/",
			"transformGroup": "less",
			"files": [
				{
					"destination": "data-colors.less",
					"format": "less/variables",
					"filter": {
						"attributes": {
							"category": "color",
							"type": "data"
						}
					}
				},

				{
					"destination": "brand-colors.less",
					"format": "less/variables",
					"filter": {
						"attributes": {
							"category": "color",
							"type": "brand"
						}
					}
				},

				{
					"destination": "system-colors.less",
					"format": "less/variables",
					"filter": {
						"attributes": {
							"category": "color",
							"type": "system"
						}
					}
				},

				{
					"destination": "fonts.less",
					"format": "less/variables",
					"filter": { "attributes": { "category": "font" } }
				},

				{
					"destination": "button.less",
					"format": "less/variables",
					"filter": { "attributes": { "item": "button" } }
				}
			]
		},

		"js": {
			"prefix": "ds",
			"transformGroup": "js",
			"buildPath": "dist/js/",
			"files": [
				{
					"format": "javascript/es6",
					"destination": "brand-colors.esm.js",
					"filter": {
						"attributes": {
							"category": "color",
							"type": "brand"
						}
					}
				},

				{
					"format": "javascript/es6",
					"destination": "data-colors.esm.js",
					"filter": {
						"attributes": {
							"category": "color",
							"type": "data"
						}
					}
				},

				{
					"destination": "system-colors.esm.js",
					"format": "javascript/es6",
					"filter": {
						"attributes": {
							"category": "color",
							"type": "system"
						}
					}
				}
			]
		},

		"icons": {
			"transforms": ["attribute/cti", "name/cti/kebab"],
			"buildPath": "dist/icons/",
			"prefix": "ds",
			"files": [
				{
					"destination": "dashboard.svg",
					"format": "svg/sprite",
					"filter": {
						"attributes": {
							"category": "asset",
							"type": "icon",
							"item": "dashboard"
						}
					}
				},
				{
					"destination": "player.svg",
					"format": "svg/sprite",
					"filter": {
						"attributes": {
							"category": "asset",
							"type": "icon",
							"item": "player"
						}
					}
				}
			]
		}
	}
}
